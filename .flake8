[flake8]
max-line-length = 120
ignore =
    # line break before binary operator
    W503,
    # See https://github.com/PyCQA/pycodestyle/issues/373
    E203,

per-file-ignores =
    # imported but unused
    __init__.py: F401

exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist
